# SuperQueues - Queue Gateway configuration

# Server
PORT=3000

# Dependencies
RABBITMQ_URL=amqp://guest:guest@localhost:5672
MONGO_URL=mongodb://localhost:27017/superqueues
REDIS_URL=redis://localhost:6379

# Namespacing
TENANT=default
ENV=dev

# Audit mode (runtime default; can be overridden via /v1/admin/settings)
# Options: full | jobs_only | off
AUDIT_MODE=full

# RabbitMQ consumer prefetch
PREFETCH_DEFAULT=10

# Pull/receipt behavior
PULL_MAX_DEFAULT=10
VISIBILITY_TIMEOUT_DEFAULT_MS=30000
RECEIPT_TTL_MAX_MS=300000

# Idempotency TTL (ms)
IDEMPOTENCY_TTL_MS=86400000

# Retry behavior
MAX_RETRY_ATTEMPTS=5
# Comma-separated delays in ms for retry queues (attempt 1..N)
RETRY_DELAYS_MS=5000,15000,60000,300000,900000

# Scripts
# API_URL=http://localhost:3000
# API_KEY=your_admin_api_key_here
